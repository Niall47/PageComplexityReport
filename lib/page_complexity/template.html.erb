<!DOCTYPE html>
<html>
<head>
  <title>Page Readability Analysis</title>
  <style>
      /* Add your CSS styles here */
      .collapsible {
          cursor: pointer;
          padding: 18px;
          width: 100%;
          border: none;
          text-align: left;
          outline: none;
          font-size: 15px;
          transition: 0.4s;
      }

      .content {
          padding: 0 18px;
          display: none;
          overflow: hidden;
          background-color: #f1f1f1;
      }

      .analysis-list {
          list-style: none;
          padding: 0;
      }

      .analysis-item {
          margin-bottom: 10px;
      }
  </style>
  <script>
      // JavaScript for collapsing sections
      function toggleCollapse(id) {
          var content = document.getElementById(id);
          content.style.display = (content.style.display === 'block') ? 'none' : 'block';
      }
  </script>
</head>
<body>
<h1>Page Readability Analysis</h1>
<% @pages.each_with_index do |page, index| %>
  <button class="collapsible" onclick="toggleCollapse('content<%= index %>')"><%= page.last.url %></button>
  <div class="content" id="content<%= index %>">
    <h2>URL: <%= page.last.url %></h2>
    <p>Page Text:</p>
    <pre><%= page.last.text %></pre>
    <p>Analysis:</p>
    <ul class="analysis-list">
      <% _analysis_metrics.each do |metric| %>
        <li class="analysis-item"><strong><%= metric.to_s.gsub('_', ' ').capitalize %>:</strong> <%= page.last.analysis[metric] %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<h1><%  @pages.each {|page| page.last.analysis[:page_read_time]} %></h1>

</body>
</html>
